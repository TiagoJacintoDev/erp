{
  "name": "backend",
  "private": true,
  "type": "module",
  "scripts": {
    "prisma:push": "prisma db push",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:prod": "dotenv -e .env.production -- tsx ./scripts/migrate-db.ts",
    "prisma:generate:client": "prisma generate",
    "start:dev": "pnpm start:dev:bun",
    "start:dev:tsx": "tsx ./prepareDevCli.ts && dotenv -e .env.development -- tsx watch ./src",
    "start:dev:bun": "bun ./prepareDevCli.ts && bun --watch ./src",
    "start:prod": "dotenv -e .env.production -- bun ./src/index.ts",
    "clean": "rimraf ./dist",
    "build_deprecated": "pnpm run clean && tsc -b tsconfig.build.json && tsc-alias -p tsconfig.build.json -r ../../tsAliasesReplacer.js",
    "postbuild": "copyfiles -u 1 src/**/*.json dist/",
    "lint": "eslint . --fix",
    "test": "jest",
    "test:dev": "jest --watchAll",
    "test:e2e": "jest -c jest.config.e2e.cjs",
    "test:e2e:dev": "jest -c jest.config.e2e.cjs --watch",
    "test:integration": "jest -c jest.config.integration.cjs",
    "test:integration:dev": "jest -c jest.config.integration.cjs --watch",
    "test:unit": "jest -c jest.config.unit.cjs",
    "test:unit:dev": "jest -c jest.config.unit.cjs --watchAll",
    "postinstall": "pnpm run generate-prisma-client"
  },
  "dependencies": {
    "@prisma/client": "^5.15.1",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "i18next": "^23.12.2",
    "i18next-fs-backend": "^2.3.1",
    "i18next-http-middleware": "^3.6.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.14",
    "ts-node": "^10.9.2",
    "winston": "^3.13.1",
    "winston-daily-rotate-file": "^5.0.0",
    "zod-i18n-map": "^2.27.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@sms/jest-config": "workspace:*",
    "@sms/shared": "workspace:*",
    "@sms/typescript-augments": "workspace:*",
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "latest",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/nodemailer": "^6.4.15",
    "bun": "^1.1.21",
    "copyfiles": "^2.4.1",
    "prisma": "^5.15.1",
    "tsx": "^4.15.6"
  }
}
