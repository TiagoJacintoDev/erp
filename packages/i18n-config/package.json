{
  "name": "@sms/i18n-config",
  "private": true,
  "type": "module",
  "scripts": {
    "start:dev": "utility-scripts-bun-watch -p ./bin -c make-scripts-available",
    "make-scripts-available": "bun link",
    "postinstall": "bun run make-scripts-available",
    "lint": "eslint . --fix"
  },
  "bin": {
    "i18n-config-generate-i18n-types": "./bin/generate-i18n-types.ts"
  },
  "exports": {
    ".": "./src/index.ts",
    "./*": "./src/*.ts"
  },
  "dependencies": {
    "i18next": "^23.12.2",
    "i18next-browser-languagedetector": "^8.0.0",
    "i18next-fs-backend": "^2.3.1",
    "i18next-http-middleware": "^3.6.0",
    "react-i18next": "^15.0.0",
    "zod-i18n-map": "^2.27.0"
  },
  "devDependencies": {
    "@sms/utility-scripts": "workspace:*",
    "@sms/eslint-config": "workspace:*",
    "@sms/typescript-config": "workspace:*"
  }
}
